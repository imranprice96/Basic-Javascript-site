html,body {
  margin: 0;
  padding: 0;
  height: 100%;
  font-family:"Open Sans";
}

h1 {
    margin:0 
}

.top-img{
    position: relative;
    height:25%;
    background-image:url(../img/milky-way.jpg);
    background-position:center;
    background-repeat:no-repeat;
    background-size:cover;
}


.top-bar{
    background-color:black;;
    position: absolute;
    width:100%;
    top: 50%; left: 50%;
    transform: translate(-50%,-50%);

  
}

header{
   text-align: center;
   font-size: 35px;
   color: white;
}

section{
    height:100%;
    background-image:url(../img/nightmarket.jpg);
    background-position:center;
    background-repeat:no-repeat;
    background-size:cover;
}

.side-bar{
    height:100%;
    background-color:black;
    float:left;
    padding:20px;
    width:15%;
    margin-right:20px;
}

.side-bar a{
    display:block;
    color:white;
    padding:10px;
    font-size:25px;
    text-decoration:none;
}

.side-bar a:hover{
    background-color:cornflowerblue;
}

.side-bar a.active{
    background-color:blue;
}


.content{
  margin:20px;
  float: left;
  padding: 20px;
  width: 75%;
  background-color: #f1f1f1;
}

section::after{
   content: "";
   display: table;
   clear: both;
}

.tablink {
  background-color: #555;
  color: white;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  font-size: 17px;
  width: 25%;
}

.pg-header{
    color:white;
    background-color:black;
}
