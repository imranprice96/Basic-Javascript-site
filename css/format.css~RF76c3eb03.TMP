body,html {
    height:100%;
    margin:0;
    

}

.top-img{
  background-image: url("../img/nightmarket.jpg");

  height: 35%;
  min-height:300px; 
  
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

  position:relative;
  float:left;
}

.top-container{
  position: absolute;
  margin: 20px;
  width: auto;
}

.top-bar{
  overflow: hidden;
  background-color: #333;/*move*/
}

.top-bar h1{
  float: left;
  color: #f2f2f2; /*move*/
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.side-bar{
  width:20%;
  min-width: 130px;
  position: fixed;
  z-index: 1;
  top: 20px;
  left: 10px;
  background: #eee;
  overflow-x: hidden;
  padding: 8px 0;
  float:left;
  clear:left;
}

.side-bar a{
  padding: 6px 8px 6px 16px;
  text-decoration: none;
  font-size: 25px;
  color: #2196F3;
  display: block;
}